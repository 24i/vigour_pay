{
  "name": "vigour-pay",
  "version": "1.0.1",
  "description": "Native store purchasing and web payment",
  "main": "lib/index.js",
  "scripts": {
    "start": "./node_modules/.bin/gaston",
    "test": "./node_modules/.bin/gaston test browser"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vigour-io/pay.git"
  },
  "keywords": [
    "vigour",
    "wrapper",
    "native",
    "plugin",
    "pay",
    "payment",
    "purchasing",
    "store"
  ],
  "author": "Shawn Inder <shawn@vigour.io>",
  "contributors": [
    "Shawn Inder <shawn@vigour.io>"
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vigour-io/pay/issues"
  },
  "homepage": "https://github.com/vigour-io/pay",
  "engines": {
    "node": ">=0.12"
  },
  "dependencies": {
    "vigour-ua": "*",
    "vigour-wrapper": "~2.2.0",
    "vigour-js": "~0.3.0",
    "vigour-config": "~0.0.6"
  },
  "devDependencies": {
    "vigour-element": "*",
    "gaston": "0.27.1"
  },
  "vigour": {
    "pay": {
      "amazon": {
        "src": "https://resources.amazonwebapps.com/v1/latest/Amazon-Web-App-API.min.js"
      }
    },
    "plugin": {
      "android": {
        "skipInstall": true,
        "className": "io.vigour.pay",
        "instantiation": "new Pay(this, webview)"
      }
    }
  },
  "standard": {
    "globals": [
      "alert",
      "amzn_wa"
    ]
  }
}
